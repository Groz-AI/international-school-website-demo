{
  "colors": {
    "primary": "#0C3B5E",
    "accent": "#CFAF64",
    "neutralDark": "#111827",
    "neutralLight": "#F7F7F7",
    "success": "#0E9F6E",
    "danger": "#DC2626",
    "focusOutline": "#CFAF64"
  },
  "typography": {
    "latin": "Inter, 'Inter Variable', system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif",
    "arabic": "'IBM Plex Sans Arabic', 'Cairo', system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif",
    "scale": {
      "h1": { "sizeMin": 40, "sizeMax": 48, "lh": 1.15 },
      "h2": { "sizeMin": 28, "sizeMax": 32, "lh": 1.2 },
      "h3": { "sizeMin": 22, "sizeMax": 24, "lh": 1.25 },
      "body": { "sizeMin": 16, "sizeMax": 18, "lh": 1.6 },
      "small": { "size": 14, "lh": 1.5 }
    },
    "arabicAdjustmentsPx": 1
  },
  "spacing": {
    "base": 8,
    "sectionPadding": { "min": 72, "max": 96 }
  },
  "grid": {
    "containerMax": 1280,
    "columns": 12,
    "gutters": { "mobile": 16, "tablet": 24, "desktop": 80 }
  },
  "radii": { "button": 8, "card": 12 },
  "shadows": {
    "card": "0 2px 8px rgba(0,0,0,0.06)",
    "hover": "0 8px 24px rgba(0,0,0,0.08)"
  },
  "motion": { "durationMs": 180, "easing": "cubic-bezier(0.2, 0.8, 0.2, 1)" },
  "states": { "hoverDarkenPct": 8, "focusOutlinePx": 2, "focusOffsetPx": 2 },
  "breakpoints": { "sm": 360, "md": 768, "lg": 1024, "xl": 1440 }
}
